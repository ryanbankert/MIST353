
@page
@model Index1Model
@{
    ViewData["Title"] = "Contact";
    }
<div class="text-center">
    <h2 class="h2">Contact us to stay informed!</h2>

    <form>
        <label for="name">Name:</label><br />
        <input type="text" id="name" name="name"><br />

        <label for="email">E-Mail:</label><br />
        <input type="text" id="email" name="email" /><br />

        <label for="textbox">Enter your message below:</label> <br />
        <textarea id="textbox" name="textbox" rows="4" cols="40"></textarea><br />

        <input type="submit" value="Submit" onclick="alert('Form Submitted')">
       
    </form>
</div>
